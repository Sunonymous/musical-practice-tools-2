;; shadow-cljs configuration
{:source-paths
 ["src/dev"
  "src/main"
  "src/test"
  "../kushi/src"]

 :dependencies
 [[reagent "1.1.0"]
  [org.clojars.paintparty/kushi "1.0.0-alpha2"] ; kushi dependency
  [binaryage/devtools "1.0.3"]]

 :dev-http
 {8020 "public"}

 :builds
 {:app
  {:devtools {:log false}
   :target :browser
   :build-hooks [(kushi.core/kushi-debug)
                 (kushi.stylesheet/create-css-file)] ; kushi build hooks
   :build-options  {:cache-level :off} ; Setting {:cache-level :off} is required for `release` builds with kushi.
   :output-dir "public/js"
   :asset-path "/js"
   :modules
   {:main
    {:init-fn starter.browser/init}}}}}
